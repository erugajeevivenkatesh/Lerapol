<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="BATTERY STATE:"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/Batterystate"
                android:text=" BATTERY STATE"
                android:layout_marginEnd="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/BatteryPercentage"
                android:text="95"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:text="BLUETOOTH"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/onbluetooth"
                android:onClick="OnBluetoooth"
                android:contentDescription="image"
                android:layout_height="wrap_content" />
            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="OfBluetooth"
                android:src="@drawable/bluetoothoff"
                android:layout_height="wrap_content" />
            <ImageButton
                android:text="show"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:onClick="SerchNearBlueTooth"
                android:src="@drawable/bluetoothsearch"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:text="WI-FI"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_height="match_parent" />
            <ImageButton

                android:layout_width="0dp"
                android:layout_weight="1"

                android:src="@drawable/wifion"
                android:onClick="WifiOn"
                android:layout_height="wrap_content" />

            <ImageButton

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="wifiOff"
                android:src="@drawable/wifioff" />
            <ImageButton
                android:text="show"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:onClick="searchwifi"
                android:src="@drawable/searchwifi"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:text="RINGER VOLUME"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatSeekBar
            android:layout_width="match_parent"
            android:id="@+id/changeRinger"
            android:layout_margin="15dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:text="@string/scedulertask"
            android:onClick="SceduleActivity"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>
